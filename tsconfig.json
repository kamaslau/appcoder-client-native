{
  "extends": "@tsconfig/node16/tsconfig.json",
  "include": ["src/**/*"],
  "compilerOptions": {
    "typeRoots": ["node_modules/@types", "types"],
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["esnext", "es2020"],
    "removeComments": true,
    "noImplicitAny": false,

    // Prisma required
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true
  }
}
